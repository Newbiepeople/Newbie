body {
	background:#ececec;
	height:100%;
}
.header{
	border-bottom:1px solid #ccc;
	text-align:center;
	font-size:30px;
	margin: 20px 0 20px 0;
	line-height: 70px;
}
.form{
	width:700px;
	min-height:300px;
	border:1px solid #ccc;
	border-radius: 3px;
	box-shadow: 0 0 2px rgba(0,0,0,.2);
	margin: 20px auto 20px 430px;
	background: #fff;
}
.form-field {
    position: relative;
    padding: 8px 0 8px 110px;
    zoom: 1;
}
.form-field label {
    position: absolute;
    left: 0;
    width: 100px;
    padding-top: 7px;
    font-size: 14px;
    text-align: right;
    color: #333;
}
.form-field input{
    width: 300px;
    height: 35px;
    padding: 5px;
    border: 1px solid #aaa;
    line-height: 35px;
    vertical-align: top;
        border-radius: 5px;
}
.form-field select{
    width: 300px;
    height: 35px;
    padding: 5px;
    border: 1px solid #aaa;
    line-height: 35px;
    vertical-align: top;
}
.radio-sex{
	position: relative;
    padding: 8px 0 8px 110px;
    zoom: 1;
}
.radio-sex label{
	position: absolute;
    left: 0;
    width: 100px;
    padding-top: 7px;
    font-size: 14px;
    text-align: right;
    color: #333;
}

.radio-sex input{
    width: 20px;
    height: 25px;
    padding: 5px;
    border: 1px solid #aaa;
    line-height: 25px;
    vertical-align: top;
}

.sex{
	position: absolute;
    width: 100px;
    padding-top: 7px;
    font-size: 16px;
    text-align: left;
    color: #333;
}
.wrap{
	float: left;
    clear: both;
    position: relative;
    margin: .5em 0;
}
.tips{
	font-style: normal;
    font-size: 8px;
    color: #666;
    line-height: 3;
}
.border{
	border-bottom:1px solid #ccc;
	margin-top:20px;
	margin-bottom:20px;
}
.error{
	font-size:10px;
	color:red;
	margin-left: 110px;
    font-style: normal;
}
#s_province,#s_city,#s_county{
	width: 120px;
    height: 35px;
    padding: 5px;
    border: 1px solid #aaa;
    line-height: 35px;
    vertical-align: top;
}
#show{
	color:#3399FF;
}